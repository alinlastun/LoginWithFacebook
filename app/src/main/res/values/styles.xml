    <style name="FacebookLoginButton">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/gradient_border</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.NoActionBar.Transparent" parent="AppTheme.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--Default EditText-->
    <style name="DefaultEditText" >
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_width">@dimen/default_spinner_width</item>
        <item name="android:layout_height">@dimen/default_spinner_height</item>
        <item name="android:textSize">@dimen/register_text_buttons</item>
        <item name="android:textColor">@color/register_text_domain</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:inputType">textCapWords</item>
    </style>
</resources>
